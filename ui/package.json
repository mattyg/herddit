{
  "name": "ui",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "format": "prettier .  --write",
    "start": "vite --port $UI_PORT --clearScreen false --no-open",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:watch": "concurrently \"vue-tsc --noEmit --watch\" \"vite build --watch --clearScreen false\"",
    "preview": "vite preview",
    "package": "rm -rf ./dist && npm run build && cd dist && bestzip ../dist.zip *"
  },
  "dependencies": {
    "@babel/types": "^7.20.2",
    "@holochain-open-dev/profiles": "^0.11.2",
    "@holochain-open-dev/utils": "^0.12.0",
    "@holochain/client": "^0.12.2",
    "@msgpack/msgpack": "^2.7.2",
    "@types/lodash": "^4.14.191",
    "@types/ws": "^8.5.1",
    "@vaadin/date-time-picker": "^23.2.8",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@webcomponents/scoped-custom-element-registry": "^0.0.8",
    "dayjs": "^1.11.7",
    "lodash": "^4.17.21",
    "marked": "^4.2.5",
    "pinia": "^2.0.32",
    "pinia-plugin-persistedstate": "^3.1.0",
    "random-word-slugs": "^0.1.6",
    "vue": "^3.2.25",
    "vue-router": "^4.1.6",
    "vue3-toastify": "^0.0.5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "@types/marked": "^4.0.8",
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "bestzip": "^2.2.0",
    "concurrently": "^6.2.1",
    "daisyui": "^2.46.0",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.9.0",
    "postcss": "^8.4.20",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5",
    "vite": "^4.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.0.11"
  }
}
